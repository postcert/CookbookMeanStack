.container
   h1 {{recipe.title}}
   .row
      .col-md-6
         h3(ng-show="recipe.featured") Featured
         h3 Published on {{recipe.published | date}}

      .col-md-6
         .panel.panel-primary
            .panel-heading Ingredients
            .panel-body
               div(ng-repeat="tag in recipe.ingredients") {{tag}}